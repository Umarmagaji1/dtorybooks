<h1>Edit Stories</h1>
<div class="row">
    <form class="col s12" method="POST" , action="/stories/{{story.id}}?_method=PUT">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Title" type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
            <div class="input-field col s12">
                <select name="status" value="{{story.status}}">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
            <label>
                <input type="checkbox" name="allowComments" class="filled-in " id="filled-in-box"
                    {{#if story.allowComments}} checked="checked" {{/if}} value="{{story.allowComments}}" />
                <span>Allow Comments</span>
            </label>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <h5>Tell us your story</h5>
                            <textarea name="body">{{story.body}}</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right"></i>
            </button>
        </div>
</div>
</form>
</div>